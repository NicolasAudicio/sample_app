{
  "name": "app",
  "private": "true",
  "scripts": {
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.scss --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.scss --use=autoprefixer --output=./app/assets/builds/application.scss",
    "build:css": "sass app/assets/stylesheets/application.scss app/assets/builds/application.css --no-source-map ",
    "watch:css": "sass  ./app/assets/stylesheets/application.scss  ./app/assets/builds/application.css --watch",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "icons": "^1.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.2",
    "sass": "^1.84.0"
  }
}
